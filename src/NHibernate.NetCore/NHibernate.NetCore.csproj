<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Authors>beginor</Authors>
    <Description>Extensions for NHibernate when used in dotnet core.
For examples, visit https://github.com/beginor/nhibernate-extensions/blob/master/test/NHibernate.Extensions.UnitTest/BaseTest.cs</Description>
    <PackageId>NHibernate.NetCore</PackageId>
    <PackageVersion>5.0.0</PackageVersion>
    <Owners>beginor</Owners>
    <Title>NHibernate.NetCore</Title>
    <PackageProjectUrl>https://github.com/beginor/nhibernate-extensions</PackageProjectUrl>
    <PackageReleaseNotes>Change target to .net 5.0.0;</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
    <PackageReference Include="NHibernate" Version="5.3.4" />
  </ItemGroup>

</Project>
